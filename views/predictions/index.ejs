<!DOCTYPE html>
<html>
<head>
    <title>My Predictions</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="container">
        <h1 class="page-title">ðŸŽ¯ My Predictions</h1>

        <% if (predictions.length === 0) { %>
            <div class="empty-state">
                <p>You haven't made any predictions yet.</p>
                <a href="/races" class="btn-primary">View Races</a>
            </div>
        <% } else { %>
            <div class="predictions-grid">
                <% predictions.forEach(prediction => { %>
                    <div class="prediction-card">
                        <div class="prediction-card-header">
                            <h3 class="prediction-card-title"><%= prediction.raceId ? prediction.raceId.name : 'Unknown Race' %></h3>
                            <% if (prediction.raceId) { %>
                                <% if (prediction.raceId.status === 'upcoming') { %>
                                    <span class="badge-upcoming">UPCOMING</span>
                                <% } else if (prediction.raceId.status === 'completed') { %>
                                    <span class="badge-completed">COMPLETED</span>
                                <% } else { %>
                                    <span class="badge-live">LIVE</span>
                                <% } %>
                            <% } %>
                        </div>
                        
                        <div class="prediction-card-body">
                            <% if (prediction.raceId) { %>
                                <p class="prediction-detail">ðŸ“… <%= prediction.raceId.date.toDateString() %></p>
                            <% } %>
                            <p class="prediction-detail">ðŸŽ¯ Predicted Winner: <strong><%= prediction.predictedWinner %></strong></p>
                            <p class="prediction-detail">ðŸ’ª Confidence: <%= prediction.confidence %>/10</p>
                            
                            <% if (prediction.raceId && prediction.raceId.status === 'completed') { %>
                                <div class="points-badge">
                                    <span>Points Earned: <%= prediction.points || 0 %></span>
                                </div>
                            <% } %>
                        </div>
                        
                        <div class="prediction-card-actions">
                            <a href="/predictions/<%= prediction._id %>" class="btn-secondary">View Details</a>
                            
                            <% if (prediction.raceId && prediction.raceId.status === 'upcoming') { %>
                                <a href="/predictions/<%= prediction._id %>/edit" class="btn-primary">Edit</a>
                                <form method="POST" action="/predictions/<%= prediction._id %>?_method=DELETE" ">
                                    <button type="submit" class="btn-delete">Delete</button>
                                </form>
                            <% } %>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } %>
    </div>

</body>
</html>